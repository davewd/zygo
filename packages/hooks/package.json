{
  "dependencies": {
    "@zygo/constants": "workspace:*",
    "@zygo/eslint-config": "workspace:*",
    "@zygo/typescript-config": "workspace:*",
    "react": "latest"
  },
  "dependenciesMeta": {
    "@zygo/@zygo/typescript-config": {
      "injected": true
    },
    "@zygo/constants": {
      "injected": true
    },
    "@zygo/hooks": {
      "injected": true
    },
    "@zygo/ui": {
      "injected": true
    }
  },
  "description": "Zygo React hooks library",
  "devDependencies": {
    "@types/react": "latest",
    "jest": "latest",
    "tailwindcss": "^4.1.8",
