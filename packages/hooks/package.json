    "typescript": "latest"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "name": "@zygo/hooks",
  "private": true,
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --declaration --declarationMap",
