{
  "extends": "@zygo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "bundler",
    "module": "ES2020",
    "jsxImportSource": "react",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
