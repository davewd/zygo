{
  "name": "@zygo/types",
  "version": "0.0.1",
  "private": true,
  "description": "Zygo monorepo",
  "main": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist tsconfig.tsbuildinfo .turbo node_modules",
    "typecheck": "tsc --noEmit",
    "dev": "tsup --watch",
    "build": "tsup && tsc --emitDeclarationOnly"
  },
  "dependencies": {
    "@zygo/typescript-config": "workspace:*",
    "@zygo/eslint-config": "workspace:*",
    "react": "19.1.0"
  },
  "devDependencies": {
    "typescript": "latest",
    "jest": "latest",
    "ts-jest": "latest",
    "tailwindcss": "^4.1.8",
    "clsx": "2.1.1"
  },  
    "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ]
}
