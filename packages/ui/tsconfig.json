{
  "extends": "@zygo/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "react", "react-native"],
    "outDir": "./dist",
    "declaration": true,
    "rootDir": "./src",
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "module": "ES2020",
    "jsxImportSource": "react",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
