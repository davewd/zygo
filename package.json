{
  "private": true,
  "name": "@zygo/monorepo",
  "type": "module",
  "version": "1.0.0",
  "description": "Monorepo for Zygo projects",
  "license": "MIT",
  "author": "Zygo Team",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev --concurrency 1000",
    "lint": "turbo lint --concurrency 1000",
    "test": "turbo test --concurrency 1000",
    "test:watch": "turbo test:watch --concurrency 1000",
    "build": "turbo build --concurrency 1000",
    "prebuild": "turbo prebuild --concurrency 1000",
    "clean": "pnpm clean:build && turbo clean --concurrency 1000",
    "clean:build": "rimraf dist build lib coverage .turbo .expo tsconfig[ 0-9]+.tsbuildinfo",
    "reset": "pnpm clean && pnpm install --concurrency 1000",
    "dev:mobile": "turbo run dev --filter=@zygo/mobile --concurrency 1000",
    "dev:web": "turbo run dev --filter=@zygo/web --concurrency 1000",
    "scratch:build": "pnpm clean && pnpm install && pnpm build",
    "scratch": "pnpm clean && pnpm install && pnpm build && pnpm dev"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "postcss": "^8.5.4",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.8",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/react": "^19.1.6",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
