{
  "private": true,
  "name": "@zygo/monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "clean": "rm -rf node_modules pnpm-lock.yaml .next",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:web": "turbo run dev --filter=web",
    "scratch": "rm -rf node_modules pnpm-lock.yaml .next && pnpm install && pnpm dev"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.3.4",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/react": "^19.1.6",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
