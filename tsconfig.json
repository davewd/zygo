{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@zygo/ui": ["./packages/ui/src"],
      "@zygo/types": ["./packages/types/src"],
      "@zygo/constants": ["./packages/constants/src"],
      "@zygo/libs": ["./packages/libs/src"],
      "@zygo/hooks": ["./packages/hooks/src"],
      "@zygo/typescript-config": ["./packages/typescript-config/src"]
    }
  },
  "exclude": ["node_modules"]
}
