{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@zygo/ui/*": ["./packages/ui/src/*"],
      "@zygo/ui": ["./packages/ui/src"],
      "@zygo/ui-native/*": ["./packages/ui-native/src/*"],
      "@zygo/ui-native": ["./packages/ui-native/src"],
      "@zygo/types/*": ["./packages/types/src/*"],
      "@zygo/types": ["./packages/types/src"],
      "@zygo/constants/*": ["./packages/constants/src/*"],
      "@zygo/constants": ["./packages/constants/src"],
      "@zygo/libs/*": ["./packages/libs/src/*"],
      "@zygo/libs": ["./packages/libs/src"],
      "@zygo/hooks/*": ["./packages/hooks/src/*"],
      "@zygo/hooks": ["./packages/hooks/src"],
      "@zygo/utils/*": ["./packages/utils/src/*"],
      "@zygo/utils": ["./packages/utils/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "__mock__",
    "coverage",
    "build",
    "scripts",
    "playground",
    "docs"
  ],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
